
#details
  margin-top: 1em

  .hospital-name
    font-size: 1.5em
    font-weight: bolder
    text-align: center
    width: 100%

  .card
    display: inline-block
    background-color: white
    width: 304px
    height: 240px
    margin: 1em 0
    padding: 1em
    vertical-align: top
    position: relative

    &.middle
      margin: 1em 2em

    .specialized-services
      padding-top: 1em
      padding-left: 1em
      height: 170px
      overflow-y: scroll

      li
        margin-bottom: .5em

    .big-circle
      border-width: 1em !important
      position: absolute
      top: 7.5em
      left: 8.5em


      .inner-content
        font-size: 1.8em
        text-align: center
        height: 2em;
        margin-top: 1.1em;

      &.green
        circle(fg-green, 8em)

      &.yellow
        circle(fg-yellow, 8em)

      &.red
        circle(fg-red, 8em)

    .nao-tem
      font-size: 2.5em;
      font-weight: bold;
      color: light-grey;
      text-align: center;
      margin-top: 2.5em;

    .info-image
      col(1/2)

      img
        border: 0px none;
        width: 60%;
        float: right;
        margin-right: 1em;
        margin-top: 4em;

    .info-text
      col(1/2)

      .num
        margin-top: 2em;
        font-size: 2.5em;
        font-weight: bold;

      .label
        font-size: 1.2em
        margin-top: .3em

  .note
    color: grey

canvas.maternity-chart
  width: 180px
  height: 180px
  margin: 0 0 0 50px
